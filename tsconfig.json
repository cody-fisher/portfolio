{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./src/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
